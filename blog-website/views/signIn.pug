extends layout

block layout-content
    .container 
        .row
            .col-md-2.col-lg-3
            .col-md-8.col-lg-6
                form(name='signin' action='/auth/signin' method='post')
                    .form-floating.my-3
                        input.form-control(name='email' type='email' placeholder='name@example.com')
                        label(for='emailInput') Email address 
                    .form-floating.mb-3
                        input.form-control(name='password' type='password' placeholder='Password')
                        label(for='passowordInput') Password
                    input#btnSignin.btn.btn-secondary(type='submit' value='Log In')
            .col-md-2.col-lg-3