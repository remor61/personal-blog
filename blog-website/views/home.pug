extends layout

block layout-content
    .container 
        .row
            .col-lg-10
                .row
                    each post in mockupPosts
                        .col-md-6
                            #posts.row.g-0.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.text-white.h-md-250.position-relative
                                .col.p-4.d-flex.flex-column.position-static 
                                    h3.mb-0=post.postTitle
                                    .mb-1.text-dark=post.date
                                    p.card-text.mb-auto=post.shortText
                                    a.stretched-link.link-light(href=`completePost/${post.id}`) Continue reading
                                .col-auto.d-none.d-lg-block
                                    svg.bd-placeholder-img(width='200' height='250' xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false")
                                        title Placeholder
                                        rect(width="100%" height="100%" fill="#292929")
                                        text(x="50%" y="50%" fill="#eceeef" dy=".3em") Thumbnail                            
            .col-12.col-lg-2
                .position-sticky(style='top:1.5rem;')
                    .p-2.mb-4.rounded(style='background: #d3d4d4;')
                        h4.fst-italic About
                        p.text-justify Here I write something about why I'm doing this Here I write something about why I'm doing this Here I write something about why I'm doing this Here I write something about why I'm doing this.
                    button#btnAddCard.btn.btn-secondary(type='button' href='createNewPost') New Post